{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "./exercises/**/*",
        "./utils/**/*",
        "./today/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}